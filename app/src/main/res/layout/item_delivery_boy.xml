<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/back_list"
    android:orientation="horizontal">

    <com.grocery.common.CustomTextView
        android:id="@+id/tv_id_item_delivery_boy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size1"
        android:layout_weight="1"
        android:background="#fff"
        android:gravity="center|left"
        android:paddingLeft="@dimen/size10"
        android:text="@string/no"
        android:textColor="@color/text_spiner"
        android:textSize="@dimen/size_text_17" />

    <com.grocery.common.CustomTextView
        android:id="@+id/tv_name_item_delivery_boy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size1"
        android:layout_weight="3"
        android:background="#fff"
        android:gravity="center|left"
        android:paddingLeft="@dimen/size10"
        android:textColor="@color/text_spiner"
        android:textSize="@dimen/size_text_17" />

    <com.grocery.common.CustomTextView
        android:id="@+id/tv_email_delivery_boy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size1"
        android:layout_weight="4"
        android:background="#fff"
        android:gravity="center|left"
        android:paddingLeft="@dimen/size10"
        android:text="tin@gmail.com"
        android:textColor="@color/text_spiner"
        android:textSize="@dimen/size_text_17" />

    <com.grocery.common.CustomTextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size1"
        android:layout_weight="2"
        android:background="#fff"
        android:gravity="center|left"
        android:paddingLeft="@dimen/size10"
        android:text="****"
        android:textColor="@color/text_spiner"
        android:textSize="@dimen/size_text_17" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#fff">

        <com.grocery.common.SwitchView
            android:id="@+id/switch_active"
            android:layout_width="@dimen/size60"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/size20"
            app:color_on="@color/colorApp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size1"
        android:layout_weight="1.3"
        android:background="#fff"
        android:gravity="center">

        <com.grocery.common.CustomTextView
            android:id="@+id/btn_delete_item_delivery_boy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size12"
            android:background="@drawable/btn_no"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_17" />
    </LinearLayout>
</LinearLayout>