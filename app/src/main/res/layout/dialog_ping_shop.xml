<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff">

    <RelativeLayout
        android:layout_width="@dimen/size400"
        android:layout_height="@dimen/size270"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_ping_shop"
        android:paddingLeft="@dimen/size20"
        android:paddingTop="@dimen/size10">

        <ImageView
            android:id="@+id/imClose"
            android:layout_width="@dimen/size60"
            android:layout_height="@dimen/size60"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size5"
            android:src="@mipmap/icon_close" />

        <ImageView
            android:id="@+id/imPing"
            android:layout_width="@dimen/size120"
            android:layout_height="@dimen/size100"
            android:src="@mipmap/icon_ping" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imPing"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginRight="@dimen/size20"
            android:layout_marginTop="@dimen/size10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.grocery.common.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/flat_no_1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_text_21" />

                <com.grocery.common.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/order_no"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_text_21" />

                <com.grocery.common.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/delived_time_1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_text_21" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.grocery.common.CustomTextView
                    android:id="@+id/tvFlatNo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_text_21" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tvOrderNo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_text_21" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tvDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_text_21" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>