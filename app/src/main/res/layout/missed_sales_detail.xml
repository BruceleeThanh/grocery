<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <!--Start layout header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_EF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imBack"
            android:layout_width="@dimen/size35"
            android:layout_height="@dimen/size35"
            android:layout_gravity="center|left"
            android:layout_margin="@dimen/size10"
            android:src="@mipmap/icon_back" />

        <com.grocery.common.CustomTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size5"
            android:text="@string/app_name"
            android:textColor="@color/text_spiner"
            android:textSize="@dimen/size_text_21" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_home"
                android:layout_width="@dimen/size37"
                android:layout_height="@dimen/size37"
                android:layout_marginRight="@dimen/size5"
                android:src="@mipmap/icon_home" />

            <com.grocery.common.CustomTextView
                android:id="@+id/tv_home_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/size30"
                android:gravity="left|center"
                android:text="@string/home"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_21" />

            <ImageView
                android:id="@+id/imageViewclock"
                android:layout_width="@dimen/size35"
                android:layout_height="@dimen/size35"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/size5"
                android:src="@mipmap/icon_clock" />

            <com.grocery.common.CustomTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:paddingRight="@dimen/size15"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_21" />
        </LinearLayout>
    </LinearLayout>
    <!--End layout header-->

    <!--Start layout top-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlackTrans20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bg_EF"
            android:orientation="horizontal"
            android:padding="@dimen/size10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <com.grocery.common.CustomTextviewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_Id"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_17" />

                <com.grocery.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC1234"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_17" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <com.grocery.common.CustomTextviewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flat_no"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_17" />

                <com.grocery.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="225"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_17" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <com.grocery.common.CustomTextviewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buildin_name"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_17" />

                <com.grocery.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123 Singaroir Imahdixx"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_17" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <com.grocery.common.CustomTextviewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dish_name"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_17" />

                <com.grocery.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicken Zero"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_17" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlackTrans20" />
    </LinearLayout>
    <!--End layout top-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ProgressBar
            android:id="@+id/progressBarMain"
            android:layout_width="@dimen/size80"
            android:layout_height="@dimen/size80"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress_animation"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swiperefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.grocery.common.CRecyclerView
                    android:id="@+id/listProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:paddingBottom="@dimen/size10"
                    android:paddingLeft="@dimen/size10" />
            </android.support.v4.widget.SwipeRefreshLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>