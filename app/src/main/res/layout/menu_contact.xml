<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg_F9"
            android:orientation="horizontal"
            android:padding="@dimen/size10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.grocery.common.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/grocery_name"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <com.grocery.common.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:background="@drawable/radius_list"
                    android:hint="@string/top_start"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/size12"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <com.grocery.common.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10"
                    android:text="@string/select_country"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:background="@drawable/radius_edt">

                    <Spinner
                        android:id="@+id/spn_select_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_list" />

                    <ImageView
                        android:layout_width="@dimen/size20"
                        android:layout_height="@dimen/size20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size10"
                        android:src="@mipmap/icon_taget_down" />
                </RelativeLayout>

                <com.grocery.common.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10"
                    android:text="@string/select_city"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:background="@drawable/radius_edt">

                    <Spinner
                        android:id="@+id/spn_select_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_list" />

                    <ImageView
                        android:layout_width="@dimen/size20"
                        android:layout_height="@dimen/size20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size10"
                        android:src="@mipmap/icon_taget_down" />
                </RelativeLayout>

                <com.grocery.common.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10"
                    android:text="@string/select_Area"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:background="@drawable/radius_edt">

                    <Spinner
                        android:id="@+id/spn_select_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_list" />

                    <ImageView
                        android:layout_width="@dimen/size20"
                        android:layout_height="@dimen/size20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size10"
                        android:src="@mipmap/icon_taget_down" />
                </RelativeLayout>

                <com.grocery.common.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10"
                    android:text="@string/select_Building"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <com.grocery.common.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:background="@drawable/radius_list"
                    android:hint="@string/search"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/size12"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size50"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.grocery.common.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_phone_number"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <com.grocery.common.CustomEditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:background="@drawable/radius_list"
                    android:hint="+840123456789"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:padding="@dimen/size12"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/textView32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10"
                    android:text="@string/enter_mobile_number"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <com.grocery.common.CustomEditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:background="@drawable/radius_list"
                    android:hint="+840123456789"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:padding="@dimen/size12"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <com.grocery.common.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10"
                    android:text="@string/enter_email"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <com.grocery.common.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:background="@drawable/radius_list"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/size12"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <com.grocery.common.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10"
                    android:text="@string/enter_web"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <com.grocery.common.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:background="@drawable/radius_list"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/size12"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_rd_choose"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:id="@+id/rd_contacts_choose"
                                android:layout_width="@dimen/size30"
                                android:layout_height="@dimen/size30"
                                android:background="@drawable/customs_radio_btn"
                                android:orientation="horizontal" />

                            <com.grocery.common.CustomTextView
                                android:id="@+id/tv_choose_current"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:paddingLeft="@dimen/size10"
                                android:text="@string/choose_current"
                                android:textColor="@color/text_spiner"
                                android:textSize="@dimen/size_text_18" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_rd_select"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/size15"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:id="@+id/rd_contacts_selects"
                                android:layout_width="@dimen/size30"
                                android:layout_height="@dimen/size30"
                                android:background="@drawable/customs_radio_btn"
                                android:orientation="horizontal" />

                            <com.grocery.common.CustomTextView
                                android:id="@+id/tv_select_on_map"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:paddingLeft="@dimen/size10"
                                android:text="@string/select_on_map"
                                android:textColor="@color/text_spiner"
                                android:textSize="@dimen/size_text_18" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.grocery.common.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size3"
                        android:background="@drawable/radius_list"
                        android:imeOptions="actionDone"
                        android:lines="6"
                        android:padding="@dimen/size12"
                        android:textColor="#000"
                        android:textSize="@dimen/size_text_18" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/back_list">

        <LinearLayout
            android:id="@+id/line_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"
            android:layout_alignParentTop="true"
            android:background="@color/colorApp"
            android:orientation="horizontal" />

        <com.grocery.common.CustomTextView
            android:id="@+id/btn_save_contact"
            android:layout_width="@dimen/size180"
            android:layout_height="@dimen/size55"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line_layout"
            android:layout_margin="@dimen/size10"
            android:background="@drawable/btn_save"
            android:gravity="center"
            android:text="@string/save_update"
            android:textColor="@color/text_save"
            android:textSize="@dimen/size_text_21" />
    </RelativeLayout>
</RelativeLayout>