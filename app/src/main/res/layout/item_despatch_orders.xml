<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/back_list"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/size1"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:weightSum="14">

        <com.grocery.common.CustomTextView
            android:id="@+id/tvOrderId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="center|left"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:paddingLeft="@dimen/size10"
            android:text="@string/order_Id"
            android:textColor="@color/text_spiner"
            android:textSize="@dimen/size_text_17" />

        <com.grocery.common.CustomTextviewBold
            android:id="@+id/tvFlatNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size1"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center|left"
            android:paddingBottom="@dimen/size5"
            android:paddingLeft="@dimen/size10"
            android:singleLine="true"
            android:text="@string/falt_no"
            android:textColor="@color/text_spiner"
            android:textSize="@dimen/size_text_17" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="4">

            <com.grocery.common.CustomTextView
                android:id="@+id/tvBuildingName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="marquee"
                android:gravity="center|left"
                android:paddingLeft="@dimen/size10"
                android:singleLine="true"
                android:text="@string/buildin_name"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_17" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imTypeOrder"
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:layout_margin="@dimen/size3" />
            </LinearLayout>
        </LinearLayout>

        <com.grocery.common.CustomTextView
            android:id="@+id/tvCustomName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:ellipsize="marquee"
            android:gravity="center|left"
            android:paddingLeft="@dimen/size10"
            android:singleLine="true"
            android:text="@string/Customer_name"
            android:textColor="@color/text_spiner"
            android:textSize="@dimen/size_text_17" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size5"
            android:paddingLeft="@dimen/size10">

            <com.grocery.common.CustomTextviewBold
                android:id="@+id/tvAmount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="@string/Amount"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_17" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.7"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size15">

                <com.grocery.common.CustomTextView
                    android:id="@+id/tvDeleveryboy"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="left|bottom"
                    android:singleLine="true"
                    android:textColor="@color/canceled_orders"
                    android:textSize="@dimen/size_text_17" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tvDeliverBefore"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="@color/canceled_orders"
                    android:textSize="@dimen/size_text_17" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3">

                <com.grocery.common.CustomTextView
                    android:id="@+id/tvDelivered"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/size12"
                    android:layout_marginLeft="@dimen/size12"
                    android:layout_marginRight="@dimen/size12"
                    android:layout_marginTop="@dimen/size12"
                    android:background="@drawable/bg_canceled_orders"
                    android:gravity="center"
                    android:text="@string/delivered"
                    android:textColor="#fff"
                    android:textSize="@dimen/size_text_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size12"
                android:layout_marginTop="@dimen/size12"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <include layout="@layout/button_view" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>