<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/size10"
    android:layout_marginTop="@dimen/size10"
    android:background="@drawable/radius_list"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/size8">

    <RelativeLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_F2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layoutImage"
                    android:layout_width="0dp"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_height="@dimen/size85"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="@dimen/size30"
                        android:layout_height="@dimen/size30"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:indeterminateDrawable="@drawable/progress_animation" />

                    <ImageView
                        android:id="@+id/im_item_manage_products"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/size10">

                    <com.grocery.common.CustomTextView
                        android:id="@+id/aed_item_manage_products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="5.00"
                        android:textColor="@color/colorApp"
                        android:textSize="@dimen/size_text_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size10"
                        android:orientation="horizontal">

                        <com.grocery.common.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/QTE"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/size_text_14" />

                        <com.grocery.common.CustomTextView
                            android:id="@+id/qte_item_manage_products"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size5"
                            android:text="3"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/size_text_14" />
                    </LinearLayout>

                    <com.grocery.common.CustomTextView
                        android:id="@+id/weight_item_manage_products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size10"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="600"
                        android:textSize="@dimen/size_text_14" />

                </LinearLayout>
            </LinearLayout>

            <com.grocery.common.CustomTextView
                android:id="@+id/note_item_manage_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="@dimen/size15"
                android:paddingLeft="@dimen/size5"
                android:paddingRight="@dimen/size5"
                android:paddingTop="@dimen/size5"
                android:text="@string/l_usine"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_text_16" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/imCheckAdd"
            android:layout_width="@dimen/size30"
            android:layout_height="@dimen/size30"
            android:layout_alignParentRight="true"
            android:background="@drawable/check_add" />
    </RelativeLayout>

</android.support.v7.widget.CardView>