<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/size8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_save_manager_category"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_number"
            android:layout_width="@dimen/size50"
            android:layout_height="@dimen/size50"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size10">

            <ImageView
                android:id="@+id/im_round_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/icon_selected" />

            <com.grocery.common.CustomTextView
                android:id="@+id/tv_number_select_add_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textColor="@color/text_save"
                android:textSize="@dimen/size_text_20" />
        </RelativeLayout>

        <com.grocery.common.CustomTextView
            android:id="@+id/tvSelect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_number"
            android:gravity="center|left"
            android:paddingLeft="@dimen/size10"
            android:text="@string/selected"
            android:textColor="@color/text_save"
            android:textSize="@dimen/size_text_18" />
    </LinearLayout>

    <com.grocery.common.CustomTextView
        android:id="@+id/btn_make_offer_live_cus"
        android:layout_width="@dimen/size180"
        android:layout_height="@dimen/size48"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_save"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/make_offers"
        android:textColor="@color/text_save"
        android:textSize="@dimen/size_text_18" />
</RelativeLayout>