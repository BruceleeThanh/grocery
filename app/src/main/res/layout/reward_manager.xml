<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_EF"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/size12"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size15"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <com.grocery.common.CustomTextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_brand"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_17" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:background="@drawable/radius_edt">

                <Spinner
                    android:id="@+id/spn_choose_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_edt" />

                <ImageView
                    android:layout_width="@dimen/size20"
                    android:layout_height="@dimen/size20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size10"
                    android:src="@mipmap/icon_taget_down" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size15"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <com.grocery.common.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_category"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_17" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:background="@drawable/radius_edt">

                <Spinner
                    android:id="@+id/spn_choose_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_edt" />

                <ImageView
                    android:layout_width="@dimen/size20"
                    android:layout_height="@dimen/size20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size10"
                    android:src="@mipmap/icon_taget_down" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size15"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <com.grocery.common.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/products_name"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_17" />

            <com.grocery.common.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:background="@drawable/radius_edt"
                android:ellipsize="end"
                android:hint="@string/products_name"
                android:imeOptions="actionDone"
                android:padding="@dimen/size12"
                android:singleLine="true"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_17" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_searc_reward_manage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size48"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_open_again_shop"
                android:padding="@dimen/size10"
                android:src="@mipmap/icon_search" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.grocery.common.CRecyclerView
            android:id="@+id/lv_reward_mangage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginBottom="@dimen/size10"
            android:background="#fff"
            android:orientation="horizontal" />
    </LinearLayout>
</LinearLayout>