<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="@dimen/size25"
                    android:layout_height="@dimen/size25"
                    android:background="@drawable/customs_radio_btn"
                    android:gravity="center"
                    android:orientation="horizontal" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tvPerUser"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/size10"
                    android:text="@string/per_user"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_15" />
            </LinearLayout>

            <View
                android:id="@+id/view_per_user"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/size10"
                android:background="@color/colorApp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="@dimen/size25"
                    android:layout_height="@dimen/size25"
                    android:background="@drawable/customs_radio_btn"
                    android:gravity="center"
                    android:orientation="horizontal" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tvPerOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/size10"
                    android:text="@string/per_order"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_15" />
            </LinearLayout>

            <View
                android:id="@+id/view_per_order"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/size10"
                android:background="@color/colorApp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.grocery.common.CustomEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radius_edt"
            android:gravity="center"
            android:hint="0"
            android:padding="@dimen/size10"
            android:textColor="@color/text_spiner"
            android:textSize="@dimen/size_text_16" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <com.grocery.common.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size10"
                android:text="@string/unit_kg"
                android:textSize="@dimen/size_text_16" />

            <com.grocery.common.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_period_in_hours"
                android:textSize="@dimen/size_text_12" />
        </LinearLayout>

        <com.grocery.common.CustomEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radius_edt"
            android:gravity="center"
            android:hint="24"
            android:padding="@dimen/size10"
            android:textColor="@color/text_spiner"
            android:textSize="@dimen/size_text_16" />
    </LinearLayout>
</LinearLayout>
