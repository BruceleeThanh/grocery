<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_dialog"
    android:gravity="center"
    android:orientation="vertical">

    <com.grocery.common.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_delivery_boy"
        android:textColor="#fff"
        android:textSize="@dimen/size_text_36" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size30"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <com.wefika.flowlayout.FlowLayout
            android:id="@+id/flowlayout_delivery_boy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="horizontal">

        <com.grocery.common.CustomTextView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/size200"
            android:layout_height="@dimen/size50"
            android:layout_marginRight="@dimen/size10"
            android:background="@drawable/btn_no"
            android:gravity="center"
            android:text="@string/canceled"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_21"
            android:textStyle="bold" />

        <com.grocery.common.CustomTextView
            android:id="@+id/btn_continue"
            android:layout_width="@dimen/size200"
            android:layout_height="@dimen/size50"
            android:layout_marginLeft="@dimen/size10"
            android:background="@drawable/btn_yes"
            android:gravity="center"
            android:text="@string/label_continue"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_21"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>