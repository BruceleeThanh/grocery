<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main_orders"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.grocery.common.CRecyclerView
        android:id="@+id/lv_list_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingLeft="@dimen/size10"
        android:paddingTop="@dimen/size10"
        android:paddingRight="@dimen/size10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lv_list_category"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutCheckBoxFilter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size55"
            android:layout_margin="@dimen/size10"
            android:background="#fff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_table"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size15"
                android:paddingRight="@dimen/size15">

                <com.grocery.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Notifica"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/size_text_19"
                    android:textStyle="bold" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tv_number_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size20"
                    android:background="@drawable/render"
                    android:gravity="center"
                    android:paddingTop="@dimen/size5"
                    android:paddingLeft="@dimen/size15"
                    android:paddingRight="@dimen/size15"
                    android:paddingBottom="@dimen/size5"
                    android:text="0"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="@dimen/size_text_17" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCheckBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size10"
                android:background="@drawable/bg_table"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/size10"
                android:weightSum="21">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/size35"
                    android:layout_height="@dimen/size35"
                    android:src="@mipmap/icon_filter" />

                <com.grocery.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5"
                    android:text="@string/fiter"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_text_17" />

                <LinearLayout
                    android:id="@+id/cbNormal"
                    android:layout_width="@dimen/size30"
                    android:layout_height="@dimen/size30"
                    android:layout_marginLeft="@dimen/size10"
                    android:background="@drawable/check_box_3"
                    android:orientation="horizontal" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tv_main_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5"
                    android:text="@string/normal"
                    android:textColor="@color/text_color_filter"
                    android:textSize="@dimen/size_text_16" />

                <LinearLayout
                    android:id="@+id/cbBulk"
                    android:layout_width="@dimen/size30"
                    android:layout_height="@dimen/size30"
                    android:layout_marginLeft="@dimen/size10"
                    android:background="@drawable/check_box_3"
                    android:orientation="horizontal" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tv_main_bulk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5"
                    android:text="@string/bulk_orers"
                    android:textColor="@color/text_color_filter"
                    android:textSize="@dimen/size_text_16" />

                <LinearLayout
                    android:id="@+id/cbSchedule"
                    android:layout_width="@dimen/size30"
                    android:layout_height="@dimen/size30"
                    android:layout_marginLeft="@dimen/size10"
                    android:background="@drawable/check_box_3"
                    android:orientation="horizontal" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tv_main_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5"
                    android:text="@string/schedule"
                    android:textColor="@color/text_color_filter"
                    android:textSize="@dimen/size_text_16" />

                <LinearLayout
                    android:id="@+id/cbPickUp"
                    android:layout_width="@dimen/size30"
                    android:layout_height="@dimen/size30"
                    android:layout_marginLeft="@dimen/size10"
                    android:background="@drawable/check_box_3"
                    android:orientation="horizontal" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tv_main_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5"
                    android:text="@string/pick_up"
                    android:textColor="@color/text_color_filter"
                    android:textSize="@dimen/size_text_16" />

                <LinearLayout
                    android:id="@+id/cbTimeLeft"
                    android:layout_width="@dimen/size30"
                    android:layout_height="@dimen/size30"
                    android:layout_marginLeft="@dimen/size10"
                    android:background="@drawable/check_box_3"
                    android:orientation="horizontal" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tv_main_timeleft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5"
                    android:text="@string/Time_left"
                    android:textColor="@color/text_color_filter"
                    android:textSize="@dimen/size_text_16" />

                <LinearLayout
                    android:id="@+id/cbTips"
                    android:layout_width="@dimen/size30"
                    android:layout_height="@dimen/size30"
                    android:layout_marginLeft="@dimen/size10"
                    android:background="@drawable/check_box_3"
                    android:orientation="horizontal" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/tv_main_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5"
                    android:text="@string/tips"
                    android:textColor="@color/text_color_filter"
                    android:textSize="@dimen/size_text_16" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_show_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
