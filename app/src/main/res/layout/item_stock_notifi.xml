<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/size10"
    android:layout_marginTop="@dimen/size10"
    android:background="@drawable/radius_list"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layoutImage"
            android:layout_width="0dp"
            android:layout_height="@dimen/size85"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/size30"
                android:layout_height="@dimen/size30"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/progress_animation" />

            <com.grocery.common.RoundRectCornerImageView
                android:id="@+id/imAvata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size5"
            android:paddingLeft="@dimen/size10"
            android:paddingRight="@dimen/size10"
            android:paddingTop="@dimen/size5">

            <com.grocery.common.CustomTextView
                android:id="@+id/aed_item_stock_notifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="5.00"
                android:textColor="@color/colorApp"
                android:textSize="@dimen/size_text_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:orientation="horizontal">

                <com.grocery.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/QTE"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/size_text_14" />

                <com.grocery.common.CustomTextView
                    android:id="@+id/qte_item_stock_notifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="3"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/size_text_14" />
            </LinearLayout>

            <com.grocery.common.CustomTextView
                android:id="@+id/weight_item_stock_notifi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size10"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="600"
                android:textSize="@dimen/size_text_14" />
        </LinearLayout>
    </LinearLayout>

    <com.grocery.common.CustomTextView
        android:id="@+id/note_item_stock_nOtifi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="marquee"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10"
        android:paddingTop="@dimen/size5"
        android:singleLine="true"
        android:text="@string/l_usine"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/size_text_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/size10"
        android:orientation="horizontal">

        <com.grocery.common.CustomEditText
            android:id="@+id/edt_item_stock_nofifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size5"
            android:layout_weight="1"
            android:background="@drawable/radius_edt"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
            android:paddingBottom="@dimen/size8"
            android:paddingTop="@dimen/size8"
            android:singleLine="true"
            android:textColor="@color/text_spiner"
            android:textSize="@dimen/size14" />

        <com.grocery.common.CustomTextView
            android:id="@+id/btn_item_stock_notifi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/btn_open_again_shop"
            android:gravity="center"
            android:paddingBottom="@dimen/size8"
            android:paddingTop="@dimen/size8"
            android:text="@string/update_stock"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_14" />
    </LinearLayout>
</LinearLayout>