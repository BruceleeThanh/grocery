<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imCheckBoxUnits"
            android:layout_width="@dimen/size25"
            android:layout_height="@dimen/size25"
            android:gravity="center"
            android:orientation="horizontal"
            android:src="@drawable/check_box_2" />

        <com.grocery.common.CustomTextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size10"
            android:gravity="center"
            android:text="100gm"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_text_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rd_unit"
            android:layout_width="@dimen/size25"
            android:layout_height="@dimen/size25"
            android:background="@drawable/customs_radio_btn"
            android:gravity="center"
            android:orientation="horizontal" />

        <com.grocery.common.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size10"
            android:gravity="center"
            android:text="@string/set_default"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_text_14" />
    </LinearLayout>
</LinearLayout>