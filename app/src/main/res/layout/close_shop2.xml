<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    android:orientation="vertical"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_open_again_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:text="@string/open_again_shop"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_36" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_open_again_shop"
            android:gravity="bottom|center"
            android:text="@string/please_switch_on"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_36" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|top">

        <LinearLayout
            android:layout_width="@dimen/size200"
            android:layout_height="@dimen/size50"
            android:layout_marginTop="@dimen/size30"
            android:background="@drawable/render_white"
            android:padding="@dimen/size1">

            <com.grocery.common.CustomTextView
                android:id="@+id/btn_open_again_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_open_again_shop"
                android:gravity="center"
                android:text="Open Shop"
                android:textColor="#fff"
                android:textSize="@dimen/size_text_20"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>