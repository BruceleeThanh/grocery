<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorApp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10"
        android:paddingTop="@dimen/size20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.grocery.common.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/reward_points_settings"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_20" />

            <com.grocery.common.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/switch_reward_settings"
                android:text="@string/enable_points"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_20" />

            <LinearLayout
                android:id="@+id/switch_reward_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size20"
                android:orientation="horizontal">

                <com.grocery.common.SwitchView
                    android:layout_width="@dimen/size60"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size15"
            android:background="@drawable/radius_list"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size15"
            android:paddingLeft="@dimen/size25"
            android:paddingRight="@dimen/size25"
            android:paddingTop="@dimen/size15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.grocery.common.CustomTextView
                    android:layout_width="@dimen/size300"
                    android:layout_height="wrap_content"
                    android:text="@string/conversion"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/render_2"
                    android:orientation="horizontal"
                    android:padding="@dimen/size1">

                    <com.grocery.common.CustomEditText
                        android:layout_width="@dimen/size150"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_point_left"
                        android:gravity="center"
                        android:hint="100"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingBottom="@dimen/size10"
                        android:paddingTop="@dimen/size10"
                        android:singleLine="true"
                        android:textColor="@color/text_spiner"
                        android:textSize="@dimen/size_text_18"
                        android:textStyle="bold" />

                    <com.grocery.common.CustomTextView
                        android:layout_width="@dimen/size80"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_points_right"
                        android:gravity="center"
                        android:paddingBottom="@dimen/size10"
                        android:paddingTop="@dimen/size10"
                        android:text="@string/points"
                        android:textColor="@color/text_spiner"
                        android:textSize="@dimen/size_text_18" />
                </LinearLayout>

                <com.grocery.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size15"
                    android:layout_marginRight="@dimen/size15"
                    android:gravity="center"
                    android:text="@string/forP"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/render_2"
                    android:padding="@dimen/size1">

                    <com.grocery.common.CustomEditText
                        android:layout_width="@dimen/size150"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_point_left"
                        android:gravity="center"
                        android:hint="100"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingBottom="@dimen/size10"
                        android:paddingLeft="@dimen/size30"
                        android:paddingRight="@dimen/size30"
                        android:paddingTop="@dimen/size10"
                        android:singleLine="true"
                        android:textColor="@color/text_spiner"
                        android:textSize="@dimen/size_text_18"
                        android:textStyle="bold" />

                    <com.grocery.common.CustomTextView
                        android:layout_width="@dimen/size80"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_points_right"
                        android:gravity="center"
                        android:padding="@dimen/size10"
                        android:text="@string/AED2"
                        android:textColor="@color/text_spiner"
                        android:textSize="@dimen/size_text_18" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.grocery.common.CustomTextView
                    android:id="@+id/customTextView3"
                    android:layout_width="@dimen/size300"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_can"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/render_2"
                    android:padding="@dimen/size1">

                    <com.grocery.common.CustomEditText
                        android:layout_width="@dimen/size150"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_point_left"
                        android:gravity="center"
                        android:hint="1"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingBottom="@dimen/size10"
                        android:paddingLeft="@dimen/size30"
                        android:paddingRight="@dimen/size30"
                        android:paddingTop="@dimen/size10"
                        android:singleLine="true"
                        android:textColor="@color/text_spiner"
                        android:textSize="@dimen/size_text_18"
                        android:textStyle="bold" />

                    <com.grocery.common.CustomTextView
                        android:layout_width="@dimen/size80"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_points_right"
                        android:gravity="center"
                        android:padding="@dimen/size10"
                        android:text="@string/AED2"
                        android:textColor="@color/text_spiner"
                        android:textSize="@dimen/size_text_18" />
                </LinearLayout>

                <com.grocery.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size15"
                    android:layout_marginRight="@dimen/size15"
                    android:gravity="center"
                    android:text="@string/forP"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_18" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/render_2"
                    android:padding="@dimen/size1">

                    <com.grocery.common.CustomEditText
                        android:layout_width="@dimen/size150"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_point_left"
                        android:gravity="center"
                        android:hint="100"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingBottom="@dimen/size10"
                        android:paddingLeft="@dimen/size30"
                        android:paddingRight="@dimen/size30"
                        android:paddingTop="@dimen/size10"
                        android:singleLine="true"
                        android:textColor="@color/text_spiner"
                        android:textSize="@dimen/size_text_18"
                        android:textStyle="bold" />

                    <com.grocery.common.CustomTextView
                        android:layout_width="@dimen/size80"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_points_right"
                        android:gravity="center"
                        android:padding="@dimen/size10"
                        android:text="@string/points"
                        android:textColor="@color/text_spiner"
                        android:textSize="@dimen/size_text_18" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/size1"
        android:background="@color/back_list">

        <com.grocery.common.CustomTextView
            android:id="@+id/btn_save_update_reward_settings"
            android:layout_width="@dimen/size180"
            android:layout_height="@dimen/size55"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/size10"
            android:background="@drawable/btn_save"
            android:gravity="center"
            android:text="@string/save_update"
            android:textColor="@color/text_save"
            android:textSize="@dimen/size_text_18" />
    </RelativeLayout>
</RelativeLayout>