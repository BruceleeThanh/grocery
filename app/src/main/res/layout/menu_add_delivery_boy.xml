<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_tb"
    android:orientation="vertical">

    <!--Start layout top-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back_list"
        android:paddingBottom="@dimen/size10"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10"
        android:paddingTop="@dimen/size15"
        android:weightSum="5.2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.grocery.common.CustomTextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size2"
                    android:text="@string/enter_boy_name"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="*"
                    android:textColor="@color/color_01"
                    android:textSize="@dimen/size_text_16" />
            </LinearLayout>

            <com.grocery.common.CustomEditText
                android:id="@+id/edt_enter_name_delivery_boy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:background="@drawable/radius_edt"
                android:imeOptions="actionNext"
                android:maxLength="250"
                android:padding="@dimen/size10"
                android:singleLine="true"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_17" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size15"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.grocery.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size2"
                    android:text="@string/enter_email_id"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="*"
                    android:textColor="@color/color_01"
                    android:textSize="@dimen/size_text_16" />
            </LinearLayout>

            <com.grocery.common.CustomEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:background="@drawable/radius_edt"
                android:imeOptions="actionNext"
                android:maxLength="250"
                android:padding="@dimen/size10"
                android:singleLine="true"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_17" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size15"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.grocery.common.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size2"
                        android:text="@string/enter_password"
                        android:textColor="@color/text_spiner"
                        android:textSize="@dimen/size_text_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="*"
                        android:textColor="@color/color_01"
                        android:textSize="@dimen/size_text_16" />
                </LinearLayout>

                <com.grocery.common.CustomEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size5"
                    android:background="@drawable/radius_edt"
                    android:imeOptions="actionDone"
                    android:maxLength="250"
                    android:padding="@dimen/size10"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/text_spiner"
                    android:textSize="@dimen/size_text_17" />

            </LinearLayout>

            <com.grocery.common.CustomTextView
                android:id="@+id/btn_add_delivery_boy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/size15"
                android:layout_weight="1.2"
                android:background="@drawable/btn_open_again_shop"
                android:gravity="center"
                android:padding="@dimen/size10"
                android:text="@string/menu_add_delivery_boy"
                android:textColor="#fff"
                android:textSize="@dimen/size_text_17" />

        </LinearLayout>

    </LinearLayout>
    <!--End layout top-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/render"
            android:orientation="horizontal">

            <com.grocery.common.CustomTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size1"
                android:layout_weight="1"
                android:background="@color/back_list"
                android:gravity="center|left"
                android:paddingBottom="@dimen/size10"
                android:paddingLeft="@dimen/size10"
                android:paddingTop="@dimen/size10"
                android:text="@string/no"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_18" />

            <com.grocery.common.CustomEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size1"
                android:layout_weight="3"
                android:background="@color/back_list"
                android:gravity="center|left"
                android:paddingLeft="@dimen/size10"
                android:text="@string/delivery_boy_name"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_18" />

            <com.grocery.common.CustomTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size1"
                android:layout_weight="4"
                android:background="@color/back_list"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size10"
                android:text="@string/email_id"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_18" />

            <com.grocery.common.CustomTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size1"
                android:layout_weight="2"
                android:background="@color/back_list"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size10"
                android:text="@string/password"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_18" />

            <com.grocery.common.CustomTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size1"
                android:layout_weight="2"
                android:background="@color/back_list"
                android:gravity="center"
                android:text="@string/active_or_deactive"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_18" />

            <com.grocery.common.CustomTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size1"
                android:layout_weight="1.3"
                android:background="@color/back_list"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/text_spiner"
                android:textSize="@dimen/size_text_18" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <ProgressBar
                android:id="@+id/progressBarMain"
                android:layout_width="@dimen/size80"
                android:layout_height="@dimen/size80"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/progress_animation"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/layout_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite">

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/swiperefresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.grocery.common.CRecyclerView
                        android:id="@+id/lv_delivery_boy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/colorBlackTrans5"
                        android:dividerHeight="3dp"></com.grocery.common.CRecyclerView>
                </android.support.v4.widget.SwipeRefreshLayout>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>