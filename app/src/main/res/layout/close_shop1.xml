<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_dialog"
    android:orientation="vertical"
    android:weightSum="2">

    <com.grocery.common.CustomTextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:text="@string/questions_close"
        android:textColor="#fff"
        android:textSize="@dimen/size_text_36" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size50">

        <com.grocery.common.CustomTextView
            android:id="@+id/btn_No_close"
            android:layout_width="@dimen/size200"
            android:layout_height="@dimen/size50"
            android:layout_marginRight="@dimen/size20"
            android:background="@drawable/btn_no"
            android:gravity="center"
            android:text="No"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_21"
            android:textStyle="bold" />

        <com.grocery.common.CustomTextView
            android:id="@+id/btn_Yes_close"
            android:layout_width="@dimen/size200"
            android:layout_height="@dimen/size50"
            android:layout_marginLeft="@dimen/size20"
            android:background="@drawable/btn_yes"
            android:gravity="center"
            android:text="Yes"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_21"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>