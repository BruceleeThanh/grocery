<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_list"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size80"
        app:srcCompat="@mipmap/icon_app_home" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:layout_marginTop="@dimen/size12"
        app:srcCompat="@mipmap/ic_name_app" />

    <com.grocery.common.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size5"
        android:text="@string/appName1"
        android:textColor="@color/text_spiner"
        android:textSize="@dimen/size_text_30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size15"
        android:gravity="center"
        android:weightSum="3">

        <EditText
            android:id="@+id/edt_adminName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size8"
            android:layout_weight="1"
            android:background="@drawable/radius_edt"
            android:hint="User name"
            android:imeOptions="actionNext"
            android:padding="@dimen/size10"
            android:singleLine="true"
            android:textColor="@color/text_spiner"
            android:textSize="@dimen/size_text_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="3">

        <com.grocery.common.CustomEditText
            android:id="@+id/edt_passWord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size8"
            android:layout_weight="1"
            android:background="@drawable/radius_edt"
            android:hint=" Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="@dimen/size10"
            android:textColor="@color/text_spiner"
            android:textSize="@dimen/size_text_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="3">

        <com.grocery.common.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size8"
            android:layout_weight="1"
            android:background="@drawable/btn_open_again_shop"
            android:gravity="center"
            android:padding="@dimen/size8"
            android:text="@string/sign_in"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_24" />
    </LinearLayout>
</LinearLayout>
