<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="@dimen/size55"
        android:layout_height="@dimen/size80"
        android:background="@mipmap/icon_maker">
        <RelativeLayout
            android:layout_width="@dimen/size35"
            android:layout_height="@dimen/size35"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_avatar_2"
            android:layout_marginTop="@dimen/size8">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_marker"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/size1"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>