<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.grocery.common.CustomTextView
            android:id="@+id/tv_number_update_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_36" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size50">

        <com.grocery.common.CustomTextView
            android:gravity="center"
            android:id="@+id/btn_no_update_category"
            android:layout_width="@dimen/size200"
            android:layout_height="@dimen/size50"
            android:layout_marginRight="@dimen/size20"
            android:background="@drawable/btn_no"
            android:text="@string/canceled"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_21"
            android:textStyle="bold" />

        <com.grocery.common.CustomTextView
            android:gravity="center"
            android:id="@+id/btn_save_update_category"
            android:layout_width="@dimen/size200"
            android:layout_height="@dimen/size50"
            android:layout_marginLeft="@dimen/size20"
            android:background="@drawable/btn_yes"
            android:text="@string/save"
            android:textColor="#fff"
            android:textSize="@dimen/size_text_20"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>